<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itwillbs.mapper.UserMapper">

    <!-- User 삽입 시, 생성된 user_id 값을 자동으로 가져오도록 설정 -->
    <insert id="insertUser" useGeneratedKeys="true" keyProperty="userId">
        insert into User(user_id, user_name, password, email, phone_number, name, user_role, updated_at)
        values(0, #{userName}, #{password}, #{email}, #{phoneNumber}, #{name}, #{userRole}, now())
    </insert>

    <!-- Member 삽입 시, 방금 생성된 user_id 값을 사용 -->
    <insert id="insertMember">
        insert into Member(member_id, user_id)
        values(#{memberId}, #{userId})
    </insert>

    <select id="getUser" resultType="com.itwillbs.domain.UserDTO">
        select * from User where user_Name = #{userName}
    </select>

    <select id="getUserByEmail" resultType="com.itwillbs.domain.UserDTO">
        select * from User where email = #{userEmail}
    </select>
</mapper>
  